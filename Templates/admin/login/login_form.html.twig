<form action="#" class="justify-content-center login-form" method='post'>
    <div class="form-group">
        <label class="sr-only">{{ 'admin.login.form.login'|trans }}</label>
        {{ fields.login|raw }}
    </div>
    <div class="form-group">
        <label class="sr-only">{{ 'admin.login.form.password'|trans }}</label>
        {{ fields.password|raw }}
    </div>
    <div class="form-group text-left mb5">
        {{ fields.is_remember|raw }} <label for="field_remember">{{ 'admin.login.form.remember_me'|trans }}</label>
    </div>
    <p>
        <button type="submit" class="btn btn-red fs18">{{ 'admin.login.form.enter'|trans }}</button>
    </p>
    {{ fields.login_url|raw }}
    <p class='mb0 text-center'><a href='#' class='underline color-white remember-password'>{{ 'admin.login.forgot_password'|trans }}</a></p>
</form>