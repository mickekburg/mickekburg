<ul>
    {% for menu_item in menu_items %}
        <li {% if menu_item.getIsActive() %}class='active'{% endif %}>
            <a href='{{ menu_item.getHref() }}'><i class="{{ menu_item.getIcon() }} fs20"></i> {{ menu_item.getTitle() }}</a>
            {% if menu_item.getSubitems()|length > 0  %}
                <div class='popup'>
                    <a href='#' class='close'><i class="fas fa-times"></i></a>
                    <div class='header'>{{ menu_item.getTitle() }}</div>
                    <ul>
                        {% for menu_subitem in menu_item.getSubitems() %}
                            <li {% if menu_subitem.getIsActive() %}class='active'{% endif %}><a href='{{ menu_subitem.getHref() }}'>{{ menu_subitem.getTitle() }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </li>
    {% endfor %}

    {% if has_superadmin_role %}
        <li class='super'>
            <a href='{{ "login/toggle_superadmin" | site_url(true) }}' {% if is_superadmin %}class='active'{% endif %}><i class="fas fa-cog fs20"></i> Суперадмин</a>
        </li>
    {% endif %}
</ul>